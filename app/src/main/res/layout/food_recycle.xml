<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/my_background">

    <TextView
        android:id="@+id/Food_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Pizza"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Food_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/Food_names"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="66dp"
        android:text="Rs 100"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp" />
    <ImageView
        android:id="@+id/add_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:src="@drawable/addd"
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@id/cardview"
        android:layout_below="@id/Food_names"
        android:layout_alignBottom="@id/Food_price"
        android:layout_marginRight="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/Food_names"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/Food_pics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>